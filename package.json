{
  "name": "react-peekaboo",
  "description": "React hooks for monitoring an element's intersection with the viewport",
  "version": "0.4.1",
  "license": "MIT",
  "author": "Wyatt Johnston <w@wyatt.page>",
  "repository": {
    "type": "git",
    "url": "https://github.com/wpj/react-peekaboo.git"
  },
  "bugs": {
    "url": "https://github.com/wpj/react-peekaboo/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "react",
    "react-dom",
    "IntersectionObserver"
  ],
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": "prettier --write"
  },
  "scripts": {
    "build": "microbundle build --jsx React.createElement",
    "dev": "cross-env NODE_ENV=development next dev",
    "prebuild": "rimraf dist",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.2",
    "@types/jest": "^26.0.13",
    "@types/lodash.throttle": "^4.1.6",
    "@types/react": "^16.9.49",
    "babel-jest": "^26.3.0",
    "cross-env": "^7.0.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.3.0",
    "microbundle": "^0.12.3",
    "prettier": "^2.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "dom-peekaboo": "^0.1.0",
    "lodash.throttle": "^4.1.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  }
}
